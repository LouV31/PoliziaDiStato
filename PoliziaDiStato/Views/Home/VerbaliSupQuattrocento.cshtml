@model IEnumerable<PoliziaDiStato.Models.SharedAnagraficaVerbale>

@{
    ViewBag.Title = "VerbaliSupQuattrocento";
}

<h2>Verbali Sup Quattrocento</h2>

<div class="container">
    <table class="table table-striped">
        <tr>
            <th class="mb-0 fw-bold">Nome</th>
            <th class="mb-0 fw-bold">Cognome</th>
            <th class="mb-0 fw-bold">Importo</th>
            <th class="mb-0 fw-bold">Descrizione</th>
            
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td class="mb-0">@item.Anagrafica.Nome</td>
                <td class="mb-0">@item.Anagrafica.Cognome</td>
                <td class="mb-0">@item.Verbale.Importo</td>
                <td class="mb-0">@item.Tipo_Violazione.Descrizione</td>
            </tr>
        }
    </table>
    </div>
